@page
@model PersonalBlog.Pages.DashboardModel

<h2>Dashboard</h2>

<p>
    <a href="/AddArticle">
        <button style="padding:6px 12px; background:#3498db; color:white; border:none; border-radius:4px;">
            Add New Article
        </button>
    </a>

    <a href="/Logout">
        <button style="padding:6px 12px; background:#e74c3c; color:white; border:none; border-radius:4px; margin-left:10px;">
            Logout
        </button>
    </a>
</p>

<table border="1" cellpadding="5">
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>

    @foreach (var article in Model.Articles)
    {
        <tr>
            <td>@article.Title</td>
            <td>@article.PublishDate.ToShortDateString()</td>
            <td>
                <a href="/EditArticle?id=@article.Id">
                    <button style="padding:4px 8px; background:#27ae60; color:white; border:none; border-radius:4px;">
                        Edit
                    </button>
                </a>

                <a href="/DeleteArticle?id=@article.Id">
                    <button style="padding:4px 8px; background:#c0392b; color:white; border:none; border-radius:4px; margin-left:5px;">
                        Delete
                    </button>
                </a>
            </td>
        </tr>
    }
</table>
